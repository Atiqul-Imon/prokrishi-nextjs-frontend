# Prokrishi Frontend Environment Variables
# Copy this file to .env.local for local development

# ===========================================
# API Configuration
# ===========================================
# For local development, use your local backend URL
# For production, this will be set in Vercel dashboard
NEXT_PUBLIC_API_BASE_URL=http://localhost:3500/api

# ===========================================
# Facebook Integration (Optional)
# ===========================================
# Required only if using Facebook Messenger chat widget
NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id_here
NEXT_PUBLIC_FACEBOOK_PAGE_ID=your_facebook_page_id_here

# ===========================================
# Site Configuration
# ===========================================
# Your site URL (for SEO and sharing)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ===========================================
# Analytics (Optional)
# ===========================================
# Google Analytics tracking ID
NEXT_PUBLIC_GA_TRACKING_ID=

# ===========================================
# Other Optional Configuration
# ===========================================
# Set to 'false' in production to reduce bundle size
GENERATE_SOURCEMAP=true

